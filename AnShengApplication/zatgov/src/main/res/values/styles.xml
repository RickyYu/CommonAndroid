<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="ButtonBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dip</item>
    </style>
    <style name="ButtonBarImgBtn">
        <item name="android:layout_height">42dip</item>
        <item name="android:layout_width">42dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="thin_line_x">
        <item name="android:layout_height">1.5px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:background">@color/devide_line</item>
    </style>

    <style name="wide_line_x">
        <item name="android:layout_height">6dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:background">@color/devide_line</item>
    </style>
    <style name="setting_small_img_style">
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">30dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">6dip</item>
    </style>
    <style name="setting_left_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="setting_right_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dip</item>
    </style>
    <style name="list_item_left_img_style">
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="list_item_dot_img_style">
        <item name="android:layout_height">10dip</item>
        <item name="android:layout_width">10dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:src">@drawable/dot_orange</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="list_item_dot_left_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="wide_line_x_blue">
        <item name="android:layout_height">6dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:background">@color/blue_dan</item>
    </style>
    <style name="thin_blue_line">
        <item name="android:layout_height">18sp</item>
        <item name="android:layout_width">5px</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:background">@color/new_blue_thin_y</item>
    </style>
    <style name="thin_line_y">
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_width">1.5px</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:background">@color/new_thin_y</item>
    </style>
    <!-- 分享对话框样式 -->
    <style name="ShareDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/gray</item>
    </style>

</resources>
