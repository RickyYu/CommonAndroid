<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_title_bar" />

    <!-- 提交按钮 -->

    <LinearLayout
        android:id="@+id/btn_viewyb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_button_height"
                android:background="@drawable/btn_normal_blue_select"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_viewyb"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <!-- 企业名称 -->

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="企业名称："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:enabled="false"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 企业地址 -->

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="企业地址："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/ed_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:enabled="false"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View
                android:id="@+id/v1"
                style="@style/thin_line_x" />

            <!-- 法定代表人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="法定代表人："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_lawperson"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:enabled="false"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 处罚单位 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚单位："
                    android:textColor="#46AEE9" />

                <EditText
                    android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:id="@+id/ed_unit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 处罚原因 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚原因："
                    android:textColor="#46AEE9" />

                <EditText
                   android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:id="@+id/ed_reason"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 处罚类别 -->

            <RelativeLayout
                 android:imeOptions="actionNext"
                android:id="@+id/btn_yh_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="处罚类别:"
                    android:textColor="#46AEE9" />

                <ImageView 
                    android:id="@+id/iv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="2dip"
                    android:scaleType="center"
                    android:src="@drawable/icon_arrow_right" />

                <TextView
                    android:maxLength="40"
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_type"
                    android:gravity="center"
                    android:text="罚款"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 处罚内容： -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚内容："
                    android:textColor="#46AEE9" />

                <EditText
                    android:imeOptions="actionNext"
                    android:maxLength="500"
                    android:id="@+id/ed_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 处罚时间 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_c"
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚时间 :"
                    android:textColor="#46AEE9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_view_item_height"
                    android:layout_toRightOf="@id/tv_c" >

                    <TextView
                        android:id="@+id/tv_cftime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_cf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dip"
                        android:src="@drawable/image_icon_enterprise_selector" />
                </RelativeLayout>
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 处罚内容： -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="备注："
                    android:textColor="#46AEE9" />
            </LinearLayout>

            <EditText
                 android:textSize="@dimen/normal_text_size"
                android:imeOptions="actionDone"
                    android:maxLength="500"
                android:id="@+id/ed_bz"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:maxLines="6" />
             <!-- 细线 -->

            <View style="@style/thin_line_x" />
            
            
            
             <!-- 初查记录 -->

            <RelativeLayout
                android:id="@+id/checkfirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sc_color_btn_white_select" >

                <LinearLayout
                    android:id="@+id/arrow_view"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_view_item_height_high"
                    android:layout_alignParentRight="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dip"
                        android:scaleType="center"
                        android:src="@drawable/arrow_up" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/dot"
                    style="@style/list_item_dot_img_style" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/dot"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="初查记录"
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/title_bar_text_size" />
            </RelativeLayout>

            <View style="@style/wide_line_x_blue" />

            <LinearLayout
                android:id="@+id/ll_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dip"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone" >

                  <!-- 单位名称 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="单位名称："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/tv_name2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />

                <!-- 单位单位地址： -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="单位地址："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />

                <!-- 联系人： -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="联系人："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/tv_lxr"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />

                <!-- 检查时间 -->

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="检查时间："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/tv_jctime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!-- 细线 -->

                <View style="@style/thin_line_x" />

                <!-- 检查场所 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="检查场所："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/ed_checkplace"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />
                <!-- 联系方式 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="联系方式："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/ed_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:digits="1234567890-"
                        android:imeOptions="actionNext"
                        android:inputType="phone|number"
                        android:maxLength="13"
                        android:phoneNumber="true"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />
                <!-- 参与检查人 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="参与检查人："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/ed_people"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />
                <!-- 检查人、记录人 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="检查人/记录人："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/ed_checkpeople"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />
                <!-- 执法单位 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="执法单位："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/ed_law"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:imeOptions="actionNext"
                        android:phoneNumber="true"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />
                <!-- 现场检查记录 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dip" >

                    <TextView
                        style="@style/list_item_dot_left_text_style"
                        android:text="现场检查记录："
                        android:textColor="#46AEE9" />

                    <TextView
                        android:id="@+id/ed_now"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <View style="@style/thin_line_x" />

                <!-- 现场图片上传 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/rli2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="图片"
                            android:textColor="#46AEE9"
                            android:textSize="@dimen/normal_text_size" />

                        <ImageView
                            android:id="@+id/iv_now2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="5dip"
                            android:src="@drawable/icon_btn_scene_photo_bg" 
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <HorizontalScrollView
                        android:id="@+id/scrollview2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rli2"
                        android:layout_marginTop="5dp"
                         >

                        <LinearLayout
                            android:id="@+id/photos2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>
                <!-- 细线 -->

                <View style="@style/thin_line_x" />
            </LinearLayout>

            <!-- 隐患列表 -->

            <RelativeLayout
                android:id="@+id/yh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sc_color_btn_white_select" >

                <LinearLayout
                    android:id="@+id/arrow_view3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_view_item_height_high"
                    android:layout_alignParentRight="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/arrow3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dip"
                        android:scaleType="center"
                        android:src="@drawable/arrow_up" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/dot3"
                    style="@style/list_item_dot_img_style" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/dot3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="隐患列表"
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/title_bar_text_size" />
            </RelativeLayout>

            <View style="@style/wide_line_x_blue" />

            <cn.safetys.ywngovernment.view.PullToRefresh
                android:id="@+id/list_yh"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                 >
            </cn.safetys.ywngovernment.view.PullToRefresh>
            <!-- 历史复查记录 -->

            <RelativeLayout
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sc_color_btn_white_select" >

                <LinearLayout
                    android:id="@+id/arrow_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_view_item_height_high"
                    android:layout_alignParentRight="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dip"
                        android:scaleType="center"
                        android:src="@drawable/arrow_up" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/dot2"
                    style="@style/list_item_dot_img_style" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/dot2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="历史复查记录"
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/title_bar_text_size" />
            </RelativeLayout>

            <View style="@style/wide_line_x_blue" />

            <cn.safetys.ywngovernment.view.PullToRefresh
                android:id="@+id/list_fc"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                 >
            </cn.safetys.ywngovernment.view.PullToRefresh>
            
            
            
        </LinearLayout>
    </ScrollView>

</RelativeLayout>