<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:id="@+id/title_baryh"
        layout="@layout/common_title_bar" />
    <!-- 提交按钮 -->

    <LinearLayout
        android:id="@+id/btn_viewzd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_button_height"
                android:background="@drawable/btn_normal_blue_select"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_viewzd"
        android:layout_below="@id/title_baryh"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <!-- 企业名称 -->

            <LinearLayout
                android:id="@+id/llyhlx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="企业名称："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 单位地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="单位地址："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxEms="100"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 细线 -->


            <!-- 联系人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系人："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_lxr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 检查时间: -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_jhtime1"
                    style="@style/list_item_dot_left_text_style"
                    android:text="检查时间:"
                    android:textColor="#46AEE9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_view_item_height"
                    android:layout_toRightOf="@id/tv_jhtime1" >

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dip"
                        android:src="@drawable/image_icon_enterprise_selector" />
                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 检查场所 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="检查场所："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                      android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:id="@+id/tv_cs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 联系方式 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系方式："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:digits="1234567890-"
                    android:inputType="phone|number"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 参与检查人 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:id="@+id/tv_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="参与检查人："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_a"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/cb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/t41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <CheckBox
                        android:id="@+id/cb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/t42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_a"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <CheckBox
                        android:id="@+id/cb3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/t43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/l2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <CheckBox
                        android:id="@+id/cb4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/t44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="222"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 细线 -->


            <!-- 检查人/记录人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="检查人/记录人："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                      android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:id="@+id/tv_checker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 执法单位 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="执法单位："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                      android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:id="@+id/tv_unit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 现场检查记录 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="现场检查记录："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                      android:imeOptions="actionDone"
                    android:maxLength="500"
                    android:id="@+id/tv_now"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 附件 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="拍照:"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_now"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/icon_btn_scene_photo_bg" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/scrollview1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rli"
                    android:layout_marginTop="5dp"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/photos1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 细线 -->


            <!-- 发送整改通知书 -->

            <RelativeLayout
                android:id="@+id/cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sc_color_btn_white_select" 
                 >

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="发送整改通知书："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <CheckBox
                    android:focusable="false"
                    android:layout_alignParentRight="true"
                    android:id="@+id/cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
            </RelativeLayout>

            <!-- 发送整改通知书 -->

            <LinearLayout
                android:id="@+id/pic2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="图片："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- photo -->

            <RelativeLayout
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:id="@+id/iv0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/delete2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"
                    android:background="@drawable/delete" >
                </ImageButton>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>