<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:visibility="gone"
        android:id="@+id/title_baryh"
        layout="@layout/common_title_bar" />

    <!-- 提交按钮 -->

    <LinearLayout
        android:id="@+id/btn_viewyb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_button_height"
                android:background="@drawable/btn_normal_blue_select"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_viewyb"
        android:layout_below="@id/title_baryh"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- 单位名称 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="单位名称："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 单位单位地址： -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="单位地址："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/tv_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />
            <!-- 隐患区域 -->

            <RelativeLayout
                android:id="@+id/btn_yh_qy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="所属区域:"
                    android:textColor="#46AEE9" />

                <ImageView
                    android:id="@+id/iv_yhqy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="2dip"
                    android:scaleType="center"
                    android:src="@drawable/icon_arrow_right" />

                <TextView
                    android:id="@+id/tv_qy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_yhqy"
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>

            <View style="@style/thin_line_x" />
            <!-- 工商注册号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="工商注册号："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/tv_buss"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 行业 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="行业分类："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/tv_types"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 行业大类 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="行业大类："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/tv_tradeType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 行业中类 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="行业中类："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/tv_tradeBig"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 行业小类 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="行业小类："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/tv_tradeMid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 负责人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="法定代表人："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_person"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 联系电话 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="联系电话："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />
            <!-- 经济类型 -->

            <RelativeLayout
                android:id="@+id/btn_yh_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="经济类型:"
                    android:textColor="#46AEE9" />

                <ImageView
                    android:id="@+id/iv_typejj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="2dip"
                    android:scaleType="center"
                    android:src="@drawable/icon_arrow_right" />

                <TextView
                    android:id="@+id/ed_typejj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_typejj"
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 规模情况 -->

            <RelativeLayout
                android:id="@+id/btn_yh_type2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="规模情况:"
                    android:textColor="#46AEE9" />

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="2dip"
                    android:scaleType="center"
                    android:src="@drawable/icon_arrow_right" />

                <TextView
                    android:id="@+id/ed_big"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_type"
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>
            
             <View style="@style/thin_line_x" />

            <!-- 是否生产 -->

            <RelativeLayout
                android:id="@+id/btn_yh_type3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/t0"
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="是否生产:"
                    android:textColor="#46AEE9" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/t0"
                    android:id="@+id/ed_born"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>