<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:id="@+id/title_baryh"
        layout="@layout/common_title_bar" />
    <!-- 提交按钮 -->

    <LinearLayout
        android:id="@+id/btn_viewzd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_button_height"
                android:background="@drawable/btn_normal_blue_select"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_viewzd"
        android:layout_below="@id/title_baryh"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <!-- 单位名称 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="单位名称："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 单位地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="单位地址："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 联系人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系人："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_lxr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 检查时间 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_jhtime1"
                    style="@style/list_item_dot_left_text_style"
                    android:text="检查时间:"
                    android:textColor="@color/blue_dan" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_view_item_height"
                    android:layout_toRightOf="@id/tv_jhtime1" >

                    <TextView
                        android:id="@+id/tv_checktime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dip"
                        android:src="@drawable/image_icon_enterprise_selector" />
                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 检查场所 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="检查场所："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_checkplace"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 联系方式 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系方式："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:digits="1234567890-"
                    android:inputType="phone|number"
                    android:maxLength="13"

                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 参与检查人 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:id="@+id/tv_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="参与检查人："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_a"
                    android:text="无"
                    android:textSize="@dimen/normal_text_size" />

                <HorizontalScrollView
                    android:id="@+id/gridScrollview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tv_a"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/gridlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 细线 -->


            <!-- 检查人/记录人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="检查人/记录人："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_CheckPeople"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 执法单位 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="执法单位："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_unit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 检查表检查 -->

            <View style="@style/thin_line_x" />

            <LinearLayout
                android:id="@+id/ll_table_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/sc_color_btn_white_select"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是否检查表检查："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <CheckBox
                    android:id="@+id/cb_table_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是"
                    android:textSize="@dimen/normal_text_size" />

                <CheckBox
                    android:id="@+id/cb_table_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="否"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/wide_line_x" />

            <!-- 检查项隐患列表 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_checkcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal" >

                            <View
                                android:id="@+id/line_x_1"
                                style="@style/thin_blue_line" >
                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:text="检查事项"
                                android:textColor="@color/blue_dan"
                                android:textSize="@dimen/more_big_text_size" />
                        </LinearLayout>

                        <View style="@style/thin_line_y" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal" >

                            <View
                                android:id="@+id/line_x_2"
                                style="@style/thin_blue_line" >
                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:text="检查结果"
                                android:textColor="@color/blue_dan"
                                android:textSize="@dimen/more_big_text_size" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <com.safety.zatgov.ui.view.CustomExpandableListView
                    android:id="@+id/expandable_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fillViewport="true" />
                    
                    <!-- <ExpandableListView
                    android:id="@+id/expandable_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fillViewport="true" /> -->
            </LinearLayout>

            <View style="@style/wide_line_x" />
            <!-- 现场检查记录 -->

            <LinearLayout
                android:id="@+id/ll_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:orientation="vertical" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dip"
                    android:gravity="left|center_vertical"
                    android:text="现场检查记录:"
                    android:textColor="@color/blue_dan" />

                <EditText
                    android:id="@+id/ed_now"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:background="@drawable/icon_input_bg"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />
            <!-- 存在隐患 -->

            <LinearLayout
                android:id="@+id/ll_ishave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/sc_color_btn_white_select"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="存在隐患："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <CheckBox
                    android:id="@+id/cb_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是"
                    android:textSize="@dimen/normal_text_size" />

                <CheckBox
                    android:id="@+id/cb_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="否"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />
            <!-- 责令整改日期 -->

            <RelativeLayout
                android:id="@+id/view_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/tq"
                    style="@style/list_item_dot_left_text_style"
                    android:text="责令整改日期:"
                    android:textColor="@color/blue_dan" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_view_item_height"
                    android:layout_toRightOf="@id/tq" >

                    <TextView
                        android:id="@+id/tv_zgtime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_zgtime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dip"
                        android:src="@drawable/image_icon_enterprise_selector" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_line_bottom"
                style="@style/thin_line_x"
                android:visibility="gone" />

            <!-- 是否进行处罚 -->

            <LinearLayout
                android:id="@+id/ll_ispun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:visibility="gone"
                android:background="@drawable/sc_color_btn_white_select"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是否进行处罚："
                    android:textColor="@color/blue_dan"
                    android:textSize="@dimen/normal_text_size" />

                <CheckBox
                    android:id="@+id/cb_pun_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是"
                    android:textSize="@dimen/normal_text_size" />

                <CheckBox
                    android:id="@+id/cb_pun_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="否"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>