<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <!-- 标题大背景 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:weightSum="3" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:background="@drawable/icon_title_setting" />
        </LinearLayout>
        <!-- 标题 -->

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_hegiht"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title_bar_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dip"
            android:layout_alignParentBottom="true" >

            <!-- logo标志图 -->

            <ImageView
                android:id="@+id/img_setting_photo"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/icon_photo_default" />

            <TextView
                android:id="@+id/text_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/img_setting_photo"
                android:text="职称：局领导"
                android:textSize="@dimen/normal_text_size"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/text_user_title"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toRightOf="@id/img_setting_photo"
                android:textSize="@dimen/normal_text_size" />
            <!-- 细线 -->

            <View
                android:id="@+id/line_x_1"
                style="@style/thin_line_x"
                android:layout_above="@id/text_unit"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/img_setting_photo" />

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/line_x_1"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/img_setting_photo"
                android:textSize="@dimen/more_big_text_size"
                android:textStyle="bold" />
            <!-- 修改按钮 -->

            <LinearLayout
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_user_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:layout_toRightOf="@id/text_user_name"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="14dip"
                    android:background="@drawable/icon_setting_change" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- 粗线 -->

            <View style="@style/wide_line_x" />
            <!-- 密码修改 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height" >

                <ImageView
                    android:id="@+id/img_password"
                    style="@style/setting_small_img_style"
                    android:background="@drawable/icon_setting_password" />

                <TextView
                    style="@style/setting_left_text_style"
                    android:layout_toRightOf="@id/img_password"
                    android:text="密码修改" />

                <Button
                    android:id="@+id/btn_changepassword"
                    android:layout_width="56dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/btn_normal_orange_select"
                    android:text="修改"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>
            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 版本更新 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height" >

                <ImageView
                    android:id="@+id/img_version"
                    style="@style/setting_small_img_style"
                    android:background="@drawable/icon_setting_version" />

                <TextView
                    style="@style/setting_left_text_style"
                    android:layout_toRightOf="@id/img_version"
                    android:text="版本更新" />

                <TextView
                    android:id="@+id/text_version"
                    style="@style/setting_right_text_style"
                    android:text="已是最新版" />

                <ImageView
                    android:id="@+id/img_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/text_version"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_setting_new" />

                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="56dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/btn_normal_orange_select"
                    android:text="更新"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:visibility="gone" />
            </RelativeLayout>
            <!-- 粗线 -->

            <View style="@style/wide_line_x" />
             <!-- 技术支持 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height" >

                <ImageView
                    android:id="@+id/img_support"
                    style="@style/setting_small_img_style"
                    android:background="@drawable/icon_setting_support" />

                <TextView
                    style="@style/setting_left_text_style"
                    android:layout_toRightOf="@id/img_support"
                    android:text="技术支持：浙江安生信息科技股份有限公司" />
            </RelativeLayout>
            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 客服电话 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height" >

                <ImageView
                    android:id="@+id/img_phone"
                    style="@style/setting_small_img_style"
                    android:background="@drawable/icon_setting_employer" />

                <TextView
                    style="@style/setting_left_text_style"
                    android:layout_toRightOf="@id/img_phone"
                    android:text="客服电话：0574-87364008" />

                <Button
                    android:id="@+id/btn_dialing"
                    android:layout_width="56dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/btn_normal_orange_select"
                    android:text="拨号"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>
            <!-- 细线 -->

            <View style="@style/thin_line_x" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>