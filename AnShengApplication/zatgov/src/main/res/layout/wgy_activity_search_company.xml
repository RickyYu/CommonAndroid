<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_title_bar" />

    <RelativeLayout
        android:id="@+id/btn_yh_type2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_item_height"
        android:orientation="horizontal" >

        <TextView
            style="@style/list_item_dot_left_text_style"
            android:layout_marginLeft="10dp"
            android:text="企业规模:"
            android:textColor="#46AEE9" />

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="2dip"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_right" />

        <TextView
            android:id="@+id/ed_big"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_type"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

    <View style="@style/thin_line_x" />

    <RelativeLayout
        android:id="@+id/btn_yh_qy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_item_height"
        android:orientation="horizontal" >

        <TextView
            style="@style/list_item_dot_left_text_style"
            android:layout_marginLeft="10dp"
            android:text="所属区域:"
            android:textColor="#46AEE9" />

        <ImageView
            android:id="@+id/iv_yhqy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="2dip"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_right" />

        <TextView
            android:id="@+id/tv_qy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_yhqy"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

    <View style="@style/thin_line_x" />
    
    
        <RelativeLayout
        android:id="@+id/btn_trade_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_item_height"
        android:orientation="horizontal" >

        <TextView
            style="@style/list_item_dot_left_text_style"
            android:layout_marginLeft="10dp"
            android:text="企业类型:"
            android:textColor="#46AEE9" />

        <ImageView
            android:id="@+id/iv_yhqy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="2dip"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_right" />

        <TextView
            android:id="@+id/tv_trade_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_yhqy"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

    <View style="@style/thin_line_x" />

</LinearLayout>