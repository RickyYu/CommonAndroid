<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_viewyb"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <!-- 企业名称 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="企业名称："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_qymc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 企业地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="企业地址："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_qydz"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 法定代表人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="法定代表人："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_fddbr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 处罚单位 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚单位："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_cfdw"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:phoneNumber="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 处罚原因 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚原因："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_cfyy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:phoneNumber="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 处罚类型 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚类型："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_cflx"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:phoneNumber="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 处罚时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚时间："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_cfsj"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:phoneNumber="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 处罚内容 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="处罚内容："
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_cfnr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:phoneNumber="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 备注 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:orientation="vertical" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dip"
                    android:gravity="left|center_vertical"
                    android:text="备注:"
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_bz"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:background="@drawable/icon_input_bg"
                    android:ellipsize="end"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->


            <!-- <View style="@style/thin_line_x" /> -->


            <!-- 初查记录 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dip"
                android:orientation="vertical" 
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/checkfirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sc_color_btn_white_select"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/arrow_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/list_view_item_height_high"
                        android:layout_alignParentRight="true"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="2dip"
                            android:scaleType="center"
                            android:src="@mipmap/arrow_up" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dot"
                        style="@style/list_item_dot_img_style" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/dot"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="初查记录"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/title_bar_text_size" />
                </RelativeLayout>

                <View style="@style/wide_line_x_blue" />

                <LinearLayout
                    android:id="@+id/ll_check"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dip"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <!-- 单位名称 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="单位名称："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />

                    <!-- 单位单位地址： -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="单位地址："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />

                    <!-- 联系人： -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="联系人："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/tv_lxr"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />

                    <!-- 检查时间 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="检查时间："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/tv_jctime"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <!-- 细线 -->

                    <View style="@style/thin_line_x" />

                    <!-- 检查场所 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="检查场所："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/ed_checkplace"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />
                    <!-- 联系方式 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="联系方式："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/ed_phone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:digits="1234567890-"
                            android:imeOptions="actionNext"
                            android:inputType="phone|number"
                            android:maxLength="13"
                            android:phoneNumber="true"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />
                    <!-- 参与检查人 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="参与检查人："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/ed_people"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />
                    <!-- 检查人、记录人 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="检查人/记录人："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/ed_checkpeople"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />
                    <!-- 执法单位 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="执法单位："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/ed_law"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:imeOptions="actionNext"
                            android:phoneNumber="true"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />
                    <!-- 现场检查记录 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dip" >

                        <TextView
                            style="@style/list_item_dot_left_text_style"
                            android:text="现场检查记录："
                            android:textColor="#46AEE9" />

                        <TextView
                            android:id="@+id/ed_now"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <View style="@style/thin_line_x" />

                    <!-- 现场图片上传 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <RelativeLayout
                            android:id="@+id/rli2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="图片"
                                android:textColor="#46AEE9"
                                android:textSize="@dimen/normal_text_size" />

                            <ImageView
                                android:id="@+id/iv_now2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="5dip"
                                android:src="@mipmap/icon_btn_scene_photo_bg" />
                        </RelativeLayout>

                        <HorizontalScrollView
                            android:id="@+id/scrollview2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rli2"
                            android:layout_marginTop="5dp"
                            android:visibility="gone" >

                            <LinearLayout
                                android:id="@+id/photos2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal" >
                            </LinearLayout>
                        </HorizontalScrollView>
                    </RelativeLayout>
                    <!-- 细线 -->

                    <View style="@style/thin_line_x" />
                </LinearLayout>

                <!-- 隐患列表 -->

                <RelativeLayout
                    android:id="@+id/yh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sc_color_btn_white_select"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/arrow_view3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/list_view_item_height_high"
                        android:layout_alignParentRight="true"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/arrow3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="2dip"
                            android:scaleType="center"
                            android:src="@mipmap/arrow_up" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dot3"
                        style="@style/list_item_dot_img_style" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/dot3"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="隐患列表"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/title_bar_text_size" />
                </RelativeLayout>

                <View style="@style/wide_line_x_blue" />

                <com.safetys.zatgov.ui.view.PullToRefresh
                    android:id="@+id/list_yh"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone" >
                </com.safetys.zatgov.ui.view.PullToRefresh>
                <!-- 历史复查记录 -->

                <RelativeLayout
                    android:id="@+id/history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sc_color_btn_white_select"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/arrow_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/list_view_item_height_high"
                        android:layout_alignParentRight="true"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/arrow2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="2dip"
                            android:scaleType="center"
                            android:src="@mipmap/arrow_up" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dot2"
                        style="@style/list_item_dot_img_style" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/dot2"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="历史复查记录"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/title_bar_text_size" />
                </RelativeLayout>

                <View style="@style/wide_line_x_blue" />

                <com.safetys.zatgov.ui.view.PullToRefresh
                    android:id="@+id/list_fc"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone" >
                </com.safetys.zatgov.ui.view.PullToRefresh>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <DigitalClock
        android:id="@+id/DigitalClock01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@+id/digitalClock"
        android:textSize="20dip"
        android:visibility="gone" />

</RelativeLayout>