<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:id="@+id/title_baryh"
        layout="@layout/check_title_bar" />

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_baryh"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <!-- 单位名称 -->

            <LinearLayout
                android:id="@+id/llyhlx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="单位名称："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

          

            <!-- 单位地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="单位地址："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxEms="100"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            


            <!-- 联系人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系人："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_lxr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />
            <!-- 检查时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="检查时间："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_checktime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            
            <!-- 检查场所 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="检查场所："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxEms="100"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 细线 -->
            <!-- 联系方式 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系方式："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:digits="1234567890"
                    android:inputType="phone|number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            
             <!-- 参与检查人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="参与检查人："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_join"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxEms="100"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 检查人/记录人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="检查人/记录人："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxEms="100"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 执法单位 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="执法单位："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_law"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxEms="100"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 细线 -->
            <!-- 是否发送整改通知书 -->

            <LinearLayout
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="发送整改通知书："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxEms="100"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View  android:id="@+id/t1"
                style="@style/thin_line_x" />
            <!-- 责令整改日期 -->

            <LinearLayout
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="责令整改日期："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_zgtime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:maxEms="100"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View android:id="@+id/t2"
                style="@style/thin_line_x" />
            <!-- 细线 -->


            <!-- 现场检查记录 -->

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="现场检查记录："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_now"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            
 <!-- 行业检查表 -->

            <RelativeLayout
                android:id="@+id/btn_check_type"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/list_view_item_height"
                android:background="@drawable/sc_color_btn_white_select"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/asd"
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="行业检查表:"
                    android:textColor="#46AEE9" />

                <ImageView
                    android:id="@+id/iv_checklist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="2dip"
                    android:scaleType="center"
                    android:src="@drawable/icon_arrow_right" />
                <TextView
                    android:id="@+id/tv_type"
                    style="@style/list_item_dot_left_text_style"
                    android:layout_toRightOf="@id/asd"
                    android:layout_toLeftOf="@id/iv_checklist"
                    android:layout_marginLeft="5dp"
                    
                    />
            </RelativeLayout>
             <View style="@style/thin_line_x" />
            <!-- 图片 -->

           
           
            

          <RelativeLayout
              android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="图片"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/normal_text_size" />

                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/scrollview1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rli"
                    android:layout_marginTop="5dp"
                     >

                    <LinearLayout
                        android:id="@+id/photos1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            
            
            
             <!-- 隐患列表 -->

            <RelativeLayout
                android:id="@+id/yh"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

               

                <ImageView
                    android:id="@+id/dot3"
                    style="@style/list_item_dot_img_style" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/dot3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="隐患列表"
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/title_bar_text_size" />
            </RelativeLayout>

            <View style="@style/wide_line_x_blue" />

            <cn.safetys.ywngovernment.view.PullToRefresh
                android:id="@+id/list_yh"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                 >
            </cn.safetys.ywngovernment.view.PullToRefresh>
            
        </LinearLayout>
    </ScrollView>

</RelativeLayout>