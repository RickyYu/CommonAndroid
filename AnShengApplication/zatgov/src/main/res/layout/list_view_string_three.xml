<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sc_color_btn_white_select" >

    

    <RelativeLayout
        android:id="@+id/rll_bg_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_view_item_height_high"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/arrow_view"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/dot_img"
            style="@style/list_item_dot_img_style" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/dot_img"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textSize="@dimen/more_big_text_size" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dip"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dip"
            android:layout_toLeftOf="@id/text3"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text3"
            android:textColor="@color/text_gray"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/text3"
            android:textSize="@dimen/normal_text_size"
           />

    </RelativeLayout>

</RelativeLayout>