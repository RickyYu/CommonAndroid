<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sc_color_btn_white_select"
    android:descendantFocusability="blocksDescendants" >

    <CheckBox
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:button="@drawable/wgy_checkbox_style" >
    </CheckBox>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_view_item_height_high"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/checked"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/more_big_text_size" />

        <ImageView
            android:id="@+id/iv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text1"
            android:src="@drawable/wgy_remark_select" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/iv_remark"
            android:singleLine="false"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

</RelativeLayout>