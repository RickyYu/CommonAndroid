<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:id="@+id/title_baryh"
        layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_baryh"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="隐患详情"
                android:textColor="#46AEE9"
                android:textSize="20dp" />

            <!-- 整改情况详情 -->

            <View style="@style/wide_line_x_blue" />

            <!-- 市级以上重点企业 -->

            <RelativeLayout
                android:id="@+id/major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="市级以上重点企业："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 隐患地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="隐患地址："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_yhdz"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:maxLength="50"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 隐患区域 -->

            <LinearLayout
                android:id="@+id/btn_yh_qy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="隐患区域:"
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_yh_qy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="#BDBDBD"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 联系人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="联系人："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_lxr2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:maxLength="10"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 联系电话 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="联系电话："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_phone2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:digits="1234567890-"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:inputType="phone|number"
                    android:maxLength="13"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 手机 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="手机："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_phonenumber2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:digits="1234567890"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:inputType="phone|number"
                    android:maxLength="11"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 隐患基本情况 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="隐患基本情况："
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_yhjbqk"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:maxLength="2000"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 现场图片上传 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <RelativeLayout
                    android:id="@+id/rli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_hidden_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="现场图片"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_now"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/icon_btn_scene_photo_bg"
                        android:visibility="gone" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/scrollview1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rli"
                    android:layout_marginTop="5dp" >

                    <LinearLayout
                        android:id="@+id/photos1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 是否需要政府协调 -->

            <RelativeLayout
                android:id="@+id/zf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="是否需要政府协调："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_zf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 是否需局部停产停业 -->

            <RelativeLayout
                android:id="@+id/partStopProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="是否需局部停产停业："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_tcty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 是否需要全部停产停业 -->

            <RelativeLayout
                android:id="@+id/fullStopProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="是否需要全部停产停业："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_qbtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 落实治理目标 -->

            <RelativeLayout
                android:id="@+id/target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="落实治理目标："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_zlmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 落实治理机构人员 -->

            <RelativeLayout
                android:id="@+id/resource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="落实治理机构人员："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_zljgry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 落实安全促使及应急预案 -->

            <RelativeLayout
                android:id="@+id/safetyMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="落实安全促使及应急预案："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_yjya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 落实治理经费物资 -->

            <RelativeLayout
                android:id="@+id/goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="落实治理经费物资："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_jfwz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 计划完成治理时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_jhtime1"
                    style="@style/list_item_dot_left_text_style"
                    android:text="计划完成治理时间:"
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/tv_jhtime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:enabled="false"
                    android:maxLines="1"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 落实治理经费 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="落实治理经费:(单位：万)"
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_lszljf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:maxLength="20"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 单位负责人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="单位负责人:"
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_dwfzr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:maxLength="5"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 录入时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_jhtime2"
                    style="@style/list_item_dot_left_text_style"
                    android:text="录入时间:"
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/tv_lrtime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:enabled="false"
                    android:maxLines="1"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 填报人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="填报人:"
                    android:textColor="#46AEE9" />

                <EditText
                    android:id="@+id/ed_tbr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:enabled="false"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="整改详情"
                android:textColor="#46AEE9"
                android:textSize="20dp" />

            <!-- 整改情况详情 -->

            <View style="@style/wide_line_x_blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rll_zg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_zg_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="整改图片:"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_now2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/icon_btn_scene_photo_bg"
                        android:visibility="invisible" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/hs_zg_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rll_zg"
                    android:layout_marginTop="5dp" >

                    <LinearLayout
                        android:id="@+id/ll_zg_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="整改描述:"
                android:textColor="#46AEE9"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/et_zg_remark"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/icon_input_bg"
                android:enabled="false"
                android:hint=""
                android:imeOptions="actionDone"
                android:maxLength="500"
                android:textSize="@dimen/normal_text_size" />

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <View
                style="@style/wide_line_x_blue"
                android:layout_marginTop="20dp" />

            <RelativeLayout
                android:id="@+id/rll_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:background="#46AEE9" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="历史复查"
                    android:textColor="@color/gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                style="@style/wide_line_x_blue"
                android:layout_marginBottom="20dp" />

            <!-- 关联事项 -->

            <RelativeLayout
                android:id="@+id/btn_cb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="关联事项:"
                    android:textColor="#46AEE9" />
            </RelativeLayout>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <View style="@style/thin_line_x" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>