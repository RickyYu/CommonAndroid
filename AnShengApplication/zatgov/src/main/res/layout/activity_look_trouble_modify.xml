<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:id="@+id/title_baryh"
        layout="@layout/common_title_bar" />


    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_baryh"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >


            <!-- 隐患类别 -->

            <LinearLayout
                android:id="@+id/btn_yh_type"
                android:layout_width="match_parent"
                
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="隐患类别:"
                    android:textColor="#46AEE9" />

               

                <TextView
                    android:textColor="#BDBDBD"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_yh_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                   
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 隐患描述 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="隐患描述："
                    android:textColor="#46AEE9" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/ed_yhms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:imeOptions="actionDone"
                    android:maxLength="500"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 现场图片上传 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rli2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="现场图片"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_now2"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/icon_btn_scene_photo_bg" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/scrollview2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rli2"
                    android:layout_marginTop="5dp"
                    >

                    <LinearLayout
                        android:id="@+id/photos2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 计划整改时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_jhtime1"
                    style="@style/list_item_dot_left_text_style"
                    android:text="计划整改时间:"
                    android:textColor="#46AEE9" />


                    <EditText
                        android:id="@+id/tv_jhtime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:enabled="false"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />
            <!-- 录入时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="录入时间："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/ed_lrsj"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:enabled="false"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />
            
            
             <!-- 是否整改： -->

            <RelativeLayout
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                  >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="是否整改："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_zg"
                    android:enabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 关联事项 -->

            <RelativeLayout
                  android:visibility="gone"
                android:id="@+id/btn_cb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:orientation="horizontal" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="关联事项:"
                    android:textColor="#46AEE9" />

            </RelativeLayout>

            <Spinner
                android:visibility="gone"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View style="@style/thin_line_x" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>