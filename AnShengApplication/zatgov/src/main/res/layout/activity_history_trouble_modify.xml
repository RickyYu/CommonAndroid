<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 标题 -->

    <include
        android:id="@+id/title_baryh"
        layout="@layout/common_title_bar" />

    <!-- 提交按钮 -->

    <LinearLayout
        android:id="@+id/btn_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="6" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_button_height"
                android:background="@drawable/btn_normal_blue_select"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_view3"
        android:layout_below="@id/title_baryh"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="隐患详情"
                android:textColor="#46AEE9"
                android:textSize="20dp" />

            <!-- 整改情况详情 -->

            <View style="@style/wide_line_x_blue" />

            <!-- 企业确认整改 -->

            <RelativeLayout
                android:id="@+id/rlcheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:enabled="false" >

                <TextView
                    style="@style/list_item_dot_left_text_style"
                    android:text="企业确认整改："
                    android:textColor="#46AEE9" />

                <CheckBox
                    android:id="@+id/cb_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false" />
            </RelativeLayout>

            <!-- 细线 -->

            <View
                android:id="@+id/first"
                style="@style/thin_line_x" />
            <!-- 联 系 人 -->

            <LinearLayout
                android:id="@+id/llyhlx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联 系 人："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_lxr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:maxLength="10"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 联系电话 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系电话："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_lxdh"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:digits="1234567890-"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:inputType="phone|number"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 手机 -->

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_sj"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:digits="1234567890"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:inputType="phone|number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />
            <!-- 隐患描述 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:imeOptions="actionNext"
                    android:maxLength="500"
                    android:text="隐患描述："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:id="@+id/tv_yhms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:enabled="false"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <!-- 隐患类别 -->

            <RelativeLayout
                android:id="@+id/btn_zg_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:enabled="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv1"
                    style="@style/list_item_dot_left_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="隐患类别"
                    android:textColor="#46AEE9" />

                <TextView
                    android:id="@+id/text_zg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv1"
                    android:gravity="center"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>
            <!-- 细线 -->

            <View style="@style/thin_line_x" />

            <!-- 隐患图片上传 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/rlia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="拍照："
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_now1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/icon_btn_scene_photo_bg" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/scrollview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlia"
                    android:layout_marginTop="5dp" >

                    <LinearLayout
                        android:id="@+id/photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            <!-- 细线 -->


            <!-- <View style="@style/thin_line_x" /> -->


            <!-- 计划整改时间 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_jhtime1"
                    style="@style/list_item_dot_left_text_style"
                    android:text="计划整改时间:"
                    android:textColor="#46AEE9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_view_item_height"
                    android:layout_toRightOf="@id/tv_jhtime1" >

                    <TextView
                        android:id="@+id/tv_jhzgtime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_jhzgtime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dip"
                        android:src="@drawable/image_icon_enterprise_selector"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 完成时间： -->

            <RelativeLayout
                android:id="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_wctime1"
                    style="@style/list_item_dot_left_text_style"
                    android:text="完成时间："
                    android:textColor="#46AEE9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_view_item_height"
                    android:layout_toRightOf="@id/tv_wctime1" >

                    <TextView
                        android:id="@+id/tv_wctime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_wctime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dip"
                        android:src="@drawable/image_icon_enterprise_selector"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <!-- 关联检查事项 -->

            <LinearLayout
                android:id="@+id/ll_checkcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dip"
                    android:text="关联检查事项："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />

                <View style="@style/thin_line_x" />

                <TextView
                    android:id="@+id/tv_checkcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:textColor="#C9C9C9"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <View style="@style/thin_line_x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="备注："
                android:textColor="#46AEE9"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/tv_bz"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/icon_input_bg"
                android:enabled="false"
                android:hint=""
                android:imeOptions="actionDone"
                android:maxLength="500"
                android:textSize="@dimen/normal_text_size" />

            <View style="@style/thin_line_x" />

            <LinearLayout
                android:id="@+id/pic2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_hidden_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="隐患图片："
                    android:textColor="#46AEE9"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!-- photo -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/delete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/delete"
                    android:visibility="gone" >
                </ImageButton>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/govPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <HorizontalScrollView
                    android:id="@+id/scrollview2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <LinearLayout
                        android:id="@+id/photos2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <View style="@style/thin_line_x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="整改详情"
                android:textColor="#46AEE9"
                android:textSize="20dp" />

            <!-- 整改情况详情 -->

            <View style="@style/wide_line_x_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="备注:"
                android:textColor="#46AEE9"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/et_zg_remark"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/icon_input_bg"
                android:enabled="false"
                android:hint=""
                android:imeOptions="actionDone"
                android:maxLength="500"
                android:textSize="@dimen/normal_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rll_zg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_zg_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="整改图片:"
                        android:textColor="#46AEE9"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/iv_now2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/icon_btn_scene_photo_bg"
                        android:visibility="invisible" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/hs_zg_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rll_zg"
                    android:layout_marginTop="5dp" >

                    <LinearLayout
                        android:id="@+id/ll_zg_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            <!-- 细线 -->

            <View style="@style/thin_line_x" />

 <!--            <View
                style="@style/wide_line_x_blue"
                android:layout_marginTop="20dp" /> -->

            <RelativeLayout
                android:id="@+id/rll_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dip"
                android:visibility="gone"
                android:background="#46AEE9" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="历史复查"
                    android:textColor="@color/gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/icon_arrow_right" />
            </RelativeLayout>

            <View
                style="@style/wide_line_x_blue"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>