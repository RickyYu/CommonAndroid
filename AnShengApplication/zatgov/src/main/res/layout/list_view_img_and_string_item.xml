<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/sc_color_btn_white_select">

    <LinearLayout
        android:id="@+id/arrow_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_view_item_height_high"
        android:layout_alignParentRight="true"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dip"
            android:scaleType="center"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_view_item_height_high"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/arrow_view"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/left_img"
            style="@style/list_item_left_img_style" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/left_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@drawable/text_normal_black_select"
            android:textSize="@dimen/more_big_text_size" />
    </RelativeLayout>

</RelativeLayout>