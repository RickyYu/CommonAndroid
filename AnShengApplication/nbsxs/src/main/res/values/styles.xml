<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    
    <style name="ButtonBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dip</item>
    </style>
    <style name="ButtonBarImgBtn">
        <item name="android:layout_height">42dip</item>
        <item name="android:layout_width">42dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    
    <style name="setting_small_img_style">
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">30dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">6dip</item>
    </style>
    <style name="setting_left_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="setting_right_text_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dip</item>
    </style>
    <style name="thin_line_x">
        <item name="android:layout_height">1.5px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:background">@color/devide_line</item>
    </style>
    <style name="wide_line_x">
        <item name="android:layout_height">6dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:background">@color/devide_line</item>
    </style>
    
    <style name="list_item_dot_img_style">
        <item name="android:layout_height">10dip</item>
        <item name="android:layout_width">10dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:src">@drawable/dot_blue</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="list_item_img_style">
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:src">@drawable/last</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="list_item_dot_left_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 分享对话框样式 -->
    <style name="ShareDialog" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    
     <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    
     <style name="general_danger_name_style">
         <item name="android:layout_width">@dimen/general_danger_name_width</item>
         <item name="android:layout_height">@dimen/list_view_item_height</item>
         <item name="android:layout_marginLeft">10dp</item>
         <item name="android:ellipsize">end</item>
         <item name="android:gravity">left|center_vertical</item>
         <item name="android:singleLine">true</item>
         <item name="android:textSize">@dimen/normal_text_size</item>
     </style>
     
     <style name="menu_btn_image_style">
         <item name="android:layout_width">@dimen/color_btn_img_size</item>
         <item name="android:layout_height">@dimen/color_btn_img_size</item>
         <item name="android:layout_centerVertical">true</item>
         <item name="android:layout_alignParentRight">true</item>
         <item name="android:layout_marginRight">10dip</item>
     </style>
     
     <style name="menu_btn_text_style">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_centerVertical">true</item>
         <item name="android:layout_alignParentLeft">true</item>
         <item name="android:layout_marginLeft">10dip</item>
         <item name="android:textColor">@color/white</item>
         <item name="android:gravity">center|left</item>
         <item name="android:textSize">16sp</item>
     </style>
     
     <style name="normal_exittext_bg_style">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:minHeight">@dimen/list_view_item_height</item>
         <item name="android:layout_centerVertical">true</item>
         <item name="android:layout_alignParentRight">true</item>
         <item name="android:layout_marginLeft">10dip</item>
         <item name="android:layout_marginRight">10dip</item>
         <item name="android:textSize">@dimen/normal_text_size</item>
         <item name="android:background">@drawable/backgroud_normal_input</item>
         <item name="android:paddingLeft">3dip</item>
         <item name="android:gravity">center|left</item>
     </style>
</resources>
