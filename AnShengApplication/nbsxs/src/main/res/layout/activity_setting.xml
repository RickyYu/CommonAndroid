        <!-- <View style="@style/thin_line_x" /> -->

        <!-- 修改密码 -->

        <RelativeLayout
            android:id="@+id/btn_changepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sc_color_btn_white_select" >

            <ImageView
                android:id="@+id/iv_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/lock" />

            <TextView
                android:id="@+id/tv_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/iv_changepassword"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines= "1"
                android:text="修改密码"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:id="@+id/iv_r"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_" />

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/iv_r"
                android:layout_toRightOf="@id/tv_changepassword"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_text_size" />
        </RelativeLayout>

        <View style="@style/wide_line_x" />

        <!-- 检查更新 -->

        <RelativeLayout
            android:id="@+id/btn_checkupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sc_color_btn_white_select"
             >

            <ImageView
                android:id="@+id/iv_checkupdate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/checkgx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/iv_checkupdate"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines= "1"
                android:text="检查更新"
                android:textSize="@dimen/normal_text_size" />

          

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_updata"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_marginRight="15dip"
                 android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal_text_size"
                 /> 
                
              <TextView
                android:id="@+id/text_version"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_toLeftOf="@id/tv_updata"
                android:layout_marginRight="15dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines= "1"
                android:textColor="@color/grey"
                android:textSize="@dimen/normal_text_size" />
        </RelativeLayout>

        <View style="@style/thin_line_x" />

       
        <!-- 清除缓存 -->

        <RelativeLayout
            android:id="@+id/btn_deletePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sc_color_btn_white_select" >

            <ImageView
                android:id="@+id/iv_deletePic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/deletepic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/iv_deletePic"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines= "1"
                android:text="清除缓存"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/tv_deletePic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines= "1"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_text_size" />
        </RelativeLayout>

        <View style="@style/thin_line_x" />
        <!-- 注销 -->

        <RelativeLayout
            android:id="@+id/btn_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sc_color_btn_white_select" >

            <ImageView
                android:id="@+id/iv_stop"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/stop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/iv_stop"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines= "1"
                android:text="注销"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/tv_stop"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_view_item_height"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines= "1"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_text_size" 
                />
        </RelativeLayout>

        <View style="@style/thin_line_x" />
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="技术支持：安生科技  0574-87364008"
                android:textSize="10sp" 
                android:layout_marginBottom="5dip"
                android:textColor="@color/text_gray"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>